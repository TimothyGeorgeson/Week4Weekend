<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/llTen"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDay"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10:00 AM" />

            <TextView
                android:id="@+id/tvTenCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sunny" />

            <TextView
                android:id="@+id/tvTenTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOne"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDay"
            android:layout_toRightOf="@id/llTen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOneTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1:00 PM" />

            <TextView
                android:id="@+id/tvOneCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sunny" />

            <TextView
                android:id="@+id/tvOneTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="53" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFour"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDay"
            android:layout_toRightOf="@id/llOne"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFourTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4:00 PM" />

            <TextView
                android:id="@+id/tvFourCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sunny" />

            <TextView
                android:id="@+id/tvFourTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="52" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSeven"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDay"
            android:layout_toRightOf="@id/llFour"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSevenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="7:00 PM" />

            <TextView
                android:id="@+id/tvSevenCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sunny" />

            <TextView
                android:id="@+id/tvSevenTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="53" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>